<resources>
    <!-- Base application theme (Now a MaterialComponents theme WITH an ActionBar) -->
    <style name="Theme.IDT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Custom Outlined Button Style -->
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/darkRed</item> <!-- Border color -->
        <item name="strokeWidth">2dp</item> <!-- Border width -->
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>