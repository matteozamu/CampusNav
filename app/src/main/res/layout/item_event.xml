<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- LinearLayout con le TextView -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_event_border"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <!-- Event Creator Item -->
        <TextView
            android:id="@+id/eventCreatorItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:textAlignment="center"/>

        <!-- Event Date Item -->
        <TextView
            android:id="@+id/eventDateItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:textAlignment="center"/>

        <!-- Event Time Item -->
        <TextView
            android:id="@+id/eventTimeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:textAlignment="center"/>

        <!-- Event Type Item -->
        <TextView
            android:id="@+id/eventTypeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/joinEventButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:textColor="#006204"
        android:text="Join"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>
