<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/campus_nav" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false">

        <LinearLayout
            android:id="@+id/wifiButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_rounded_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_navigation_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:text="Campus Navigation"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newEventButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_rounded_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_polibuddy_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="PoliBuddy"
                android:layout_marginTop="4sp"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gemmaButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_rounded_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_gemma_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Ask me Anything"
                android:layout_marginTop="4sp"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/startCameraButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_rounded_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Object Detection"
                android:layout_marginTop="4sp"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>
